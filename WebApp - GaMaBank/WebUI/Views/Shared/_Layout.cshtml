<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/Views/ControlActions.js"></script>
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Fintech</a>
            <div class="collapse navbar-collapse" id="navbarColor01">
            <a class="nav-link active navbar-brand" href="#">@Html.ActionLink("Home", "Index", "Home")</a>
            <a class="nav-link navbar-brand" href="#">@Html.ActionLink("Customer", "Customer", "Home")</a>
            <a class="nav-link navbar-brand" href="#">@Html.ActionLink("About", "About", "Home")</a>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cenfotec Fintech</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
