
@{
    ViewBag.Title = "Customer";
}
<script src="~/Scripts/Views/Customer.js"></script>

<h2>Create Customer</h2>

<div class="bs-component">
    <form>
        <button type="button" class="btn btn-success" id="btnCreate"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Create</font></font></button>
        <button type="button" class="btn btn-danger" id="btnUpdate" ><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Update</font></font></button>
        <button type="button" class="btn btn-primary" id="btnDelete" ><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Delete</font></font></button>
        <button type="button" class="btn btn-dark" id="btnSearch" ><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Search</font></font></button>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Identificación</font></font></label>
            <input type="text" class="form-control" id="txtId" placeholder="Ingrese su identificación">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Name</font></font></label>
            <input type="text" class="form-control" id="txtName" placeholder="Ingrese el nombre">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Last Name</font></font></label>
            <input type="text" class="form-control" id="txtLastName" placeholder="Ingrese sus apellidos">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Email</font></font></label>
            <input type="text" class="form-control" id="txtEmail" placeholder="Ingrese correo electrónico">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Phone</font></font></label>
            <input type="text" class="form-control" id="txtPhone" placeholder="Ingrese su número de telefono">
        </div>
    </form>
</div>